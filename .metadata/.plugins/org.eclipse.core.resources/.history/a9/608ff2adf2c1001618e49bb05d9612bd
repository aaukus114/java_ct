import java.util.Random;

public class as {

	public static void main(String[] args) {
		
		boolean boo = true;
		int j =1;
		int PLH,MSH;
		Random rn = new Random();
		int i = rn.nextInt(3);
		Player pl = new Player(10,i);
		Monster ms = new Monster(10,i);
		
		while (boo = true)
		{
			i = rn.nextInt(3);
			if(j == 1)
			{
				PLH=pl.Acctack(i);
				if(PLH<0)
				{
					boo = false;
					System.out.println("Player 패배");
				}
			}
			if(j == 2)
			{
				MSH=ms.Acctack(i);
				if(MSH<0)
				{
					boo = false;
					System.out.println("Moster 패배");
				}
			}
			if(j ==1)
				j=2;
			else if(j==2)
				j=1;
			
		}
	}
}
